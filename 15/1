import pandas as pd

# Початкові дані
employees = {
    "Іванов": "Київ, вул. Шевченка, 10",
    "Петров": "Львів, вул. Дорошенка, 25",
    "Сидоров": "Одеса, вул. Рішельєвська, 5",
    "Кузін": "Харків, вул. Сумська, 15",
    "Коваль": "Запоріжжя, вул. Симоненка, 8",
    "Куравльов": "Дніпро, вул. Яворницького, 17",
    "Кудін": "Чернігів, вул. Миру, 14",
    "Кульков": "Черкаси, вул. Гагаріна, 12",
    "Смирнов": "Суми, вул. Кондратьєва, 22",
    "Кубиків": "Вінниця, вул. Соборна, 6"
}

# Перетворення словника у DataFrame
data = [{"Прізвище": name, "Місто": address.split(", ")[0], "Адреса": address.split(", ")[1]} for name, address in employees.items()]
df = pd.DataFrame(data)

# Виведення початкового DataFrame
print("Початковий DataFrame:")
print(df)

# Групування співробітників за містом
grouped = df.groupby("Місто").agg({"Прізвище": "count"}).rename(columns={"Прізвище": "Кількість співробітників"})

# Виведення згрупованих даних
print("\nГрупування співробітників за містами:")
print(grouped)
